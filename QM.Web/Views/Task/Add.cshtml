
@{
    Layout = "~/Views/Shared/_LayoutAdminContent.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <!--基本信息-->
            <div class="ibox-title">
                <h5>基本信息设置 <small>认真填写每项Item</small></h5>
            </div>
            <div class="ibox-content">
                <form method="get" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">任务名称</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="任务名称">
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">任务类型</label>
                        <div class="col-sm-10">
                            <select class="form-control m-b" name="account">
                                <option value="SQL-FILE">SQL文件</option>
                                <option value="SQL-EXP">SQL导出</option>
                                <option value="DLL-STD">标准接口程序</option>
                                <option value="DLL-UNSTD">非标准程序</option>
                            </select>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">任务文件</label>
                        <div class="col-sm-10">
                            <input type="file" placeholder="任务文件" class="form-control">
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">任务参数</label>
                        <div class="col-sm-10">
                            <input type="text"  placeholder="任务参数" class="form-control">
                        </div>
                    </div>


                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            执行计划
                        </label>
                        <div class="col-sm-10">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="执行计划">
                                <span class="input-group-btn">
                                    <a data-toggle="modal" class="btn btn-primary" href="form_basic.html#modal-form">
                                        Cron向导
                                    </a>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            任务状态
                        </label>
                        <div class="col-sm-10">
                            <select class="form-control m-b" name="account">
                                <option>启用</option>
                                <option>禁用</option>
                            </select>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">备注信息</label>
                        <div class="col-sm-10">
                            <textarea class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-primary" type="submit">保存内容</button>
                            <button class="btn btn-white" type="submit">取消</button>
                        </div>
                    </div>
                </form>
            </div>
            <!--基本信息结束-->
            <!--任务计划-->
            @Html.Action("TimePop")
            <!--任务计划结束-->
            <!--邮件设置-->
            @Html.Action("Mail")
            <!--邮件设置结束-->
            <!--FTP-->
            @Html.Action("Ftp")
            <!--FTP结束-->
        </div>
    </div>
</div>