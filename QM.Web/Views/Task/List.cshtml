@model  IEnumerable<QM.Core.Model.Tasks>
@{
    Layout = "~/Views/Shared/_LayoutAdminContent.cshtml";
}

<div class="row">
    <div class="ibox float-e-margins">
        <div class="ibox-title" style="border-bottom:none;background:#fff;">
            <h5>服务器状态</h5>
        </div>
        <div class="ibox-content" style="border-top:none;">
            <div id="flot-line-chart-moving" style="height:120px;">
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="ibox">
        <div class="ibox-title">
            <h5>所有任务</h5>
            <div class="ibox-tools">
                <a href="projects.html" class="btn btn-primary btn-xs">创建新任务</a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="row m-b-sm m-t-sm">
                <div class="col-md-1">
                    <button type="button" id="loading-example-btn" class="btn btn-white btn-sm"><i class="fa fa-refresh"></i> 刷新</button>
                </div>
                <div class="col-md-11">
                    <div class="input-group">
                        <input type="text" placeholder="请输入任务名称" class="input-sm form-control"> <span class="input-group-btn">
                            <button type="button" class="btn btn-sm btn-primary"> 搜索</button>
                        </span>
                    </div>
                </div>
            </div>
            <div class="project-list">
                <table class="table table-hover">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="project-status">
                                    <span class="label label-primary">
                                        @item.taskState
                                    </span>
                                </td>
                                <td class="project-title">
                                    <a href="project_detail.html">[]@item.taskName</a>
                                    <br>
                                    <small>创建于 @item.taskCreateTime</small>
                                </td>
                                <td class="project-completion">
                                    <small>当前进度： @item.taskRemark</small>
                                    <div class="progress progress-mini">
                                        <div style="width: 48%;" class="progress-bar"></div>
                                    </div>
                                </td>
                                <td class="project-people">
                                    @item.taskType
                                </td>
                                <td class="project-actions">
                                    <a href="projects.html#" class="btn btn-white btn-sm"><i class="fa fa-folder"></i> 查看 </a>
                                    <a href="projects.html#" class="btn btn-white btn-sm"><i class="fa fa-pencil"></i> 编辑 </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<!-- Flot -->
<script src="js/plugins/flot/jquery.flot.js"></script>
<script src="js/plugins/flot/jquery.flot.tooltip.min.js"></script>
<script src="js/plugins/flot/jquery.flot.resize.js"></script>
<script src="js/plugins/flot/jquery.flot.pie.js"></script>